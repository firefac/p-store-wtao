page .container {
  width: 750rpx;
  height: 100%;
  overflow: hidden;
  background: #fff;
}

.banner {
  width: 710rpx;
  height: 260rpx;
  margin: 20rpx;
}

.banner image {
  width: 100%;
  height: 260rpx;
  border-radius: 20rpx;
}

.patch-groupon-list {
  width: 750rpx;
  height: 100%;
  overflow: hidden;
  padding: 20rpx;
}

.patch-groupon-list .item {
  height: 575rpx;
  width: 100%;
  background: #fff;
  margin-bottom: 25rpx;
}

.patch-groupon-list .img {
  float: left;
  width: 100%;
  height: 355rpx;
  background: #993333;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  position: absolute;
}

.patch-groupon-list .label {
  float: left;
  width: 100rpx;
  height: 50rpx;
  background: #999966;
  border-radius: 20rpx 0rpx 20rpx 0rpx;
  position: absolute;
  padding: 5rpx 10rpx;
  color: #fff;
}

.patch-groupon-list .bottom {
  float: left;
  height: 220rpx;
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  box-shadow: 0px 2px  4px 1px #DDD;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
}

.patch-groupon-list .text {
  padding: 20rpx;
  height: 220rpx;
  width: 100%;
}

.patch-groupon-list .name {
  width: 100%;
  height: 80rpx;
  display: block;
  color: #333;
  line-height: 40rpx;
  font-size: 30rpx;
  overflow: hidden;
}

.patch-groupon-list .capsule-tag {
  float: right;
  padding-right: 0rpx;
  padding-top: 8rpx;
}

.patch-groupon-list .zan-capsule + .zan-capsule {
  margin-left: 10px;
}

.patch-groupon-list .desc {
  width: 100%;
  display: block;
  color: #999;
  line-height: 40rpx;
  font-size: 25rpx;
  height: 40rpx;
  overflow: hidden;
}

.patch-groupon-list .price {
  width: 100%;
  height: 50rpx;
  display: flex;
  color: #ab956d;
  font-size: 33rpx;
  position:relative;
}

.patch-groupon-list .counterPrice {
  margin-left: 30rpx;
  text-decoration: line-through;
  font-size: 25rpx;
  color: #999;
  position:absolute;
  bottom:0px;
  left: 120rpx;
}

.patch-groupon-list .retailPrice {
  font-size: 32rpx;
  color: #a78845;
  position:absolute;
  bottom:0px;
}

.patch-groupon-list .link-button{
  width: 100%;
  font-size: 25rpx;
  color: #fff;
  text-align: right;
}

.page {
  width: 750rpx;
  height: 108rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.page view {
  height: 108rpx;
  width: 50%;
  float: left;
  font-size: 29rpx;
  color: #333;
  text-align: center;
  line-height: 108rpx;
}

.page .prev {
  border-right: 1px solid #d9d9d9;
}

.page .disabled {
  color: #ccc;
}
