page{
  background-color: #fff;
}

.container {
  box-sizing: border-box;
  background-color: #fff;
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
}
.swiper_box{
  height: 100vw;
  background: #DDD;
}

.images image{
  display: block;
}

.describe-content{
  padding: 10rpx 30rpx 0rpx 30rpx;
}

.wxParse-p{
    margin: 10rpx 0rpx;
}

.content image {
  display: inline-block;
  width: 100%;
  margin: 10rpx 0rpx;
}

.describe-content .title{
  margin-top: 50rpx;
  font-weight: bold;
  font-size: 40rpx;
}

.describe-content .sub-title {
  padding: 20rpx 0rpx 10rpx 0rpx;
}

.describe-content .sub-title text{
  font-size: 32rpx;
  color: #7d7e80;
}

.tags{ 
  margin: 20rpx 0rpx;
  display: flex;
  flex-wrap: wrap;
}

.tags .tag{
  margin: 0 20rpx 10rpx 0;
}

.operation {
  padding: 10rpx 0rpx;
  display:flex;
}
.operation .likes {
  width: 75%;
  display: flex;
}

.operation .likes .avatar {
  height: 50rpx;
  width: 50rpx;
  border: 1rpx solid rgba(255, 255, 255, 1);
  border-radius: 50%;
}

.operation .likes .avatar:nth-of-type(n+2) {
  margin-left: -15rpx;
}

.operation .likes .txt {
  font-size: 26rpx;
  color: #000;
  line-height: 60rpx;
  margin: 0rpx 10rpx;
}

.operation .btn {
  display:flex;
  text-align: center;
  width: 25%;
}

.operation .share-btn {
  margin-left: 30rpx;
  background-color:transparent;
}

.wtao-title{
  margin: 30rpx 0rpx;
  font-weight: bold;
  font-size: 40rpx;
}
.wtao-view{
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}
.wtao-content{
  font-size: 32rpx;
  color: #000;
}

.contact {
  height: 100rpx;
  width: 100rpx;
  border-radius: 100%;
  position: fixed;
  bottom: 50rpx;
  right: 10rpx;
  font-size: 20rpx;
  box-sizing: border-box;
  background: url("https://firefac-1259431066.picsh.myqcloud.com/zv6kq2ms0e811z0q5zcc8p1pf7fz67mc.png") no-repeat center 21rpx;
  background-size: 55rpx auto;
}


.related-goods {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background-color: #fff;
}

.related-goods .h {
  position: relative;
  width: 100%;
  padding: 30rpx 0;
  background: #fff;
  margin-left: 30rpx;
}

.related-goods .h .title {
  width: 180rpx;
}

.related-goods .b {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.related-goods .b .item {
  float: left;
  background: #fff;
  width: 50%;
  height: auto;
  overflow: hidden;
  text-align: center;
  padding: 15rpx 31.25rpx;
}

.related-goods .item .img {
  width: 311.45rpx;
  height: 311.45rpx;
}

.related-goods .item .name {
  display: block;
  width: 311.45rpx;
  height: 70rpx;
  margin: 11.5rpx 0 5rpx 0;
  text-align: left;
  overflow: hidden;
  font-size: 26rpx;
  color: #333;
}

.related-goods .item .desc {
  display: block;
  width: 311.45rpx;
  overflow: hidden;
  height: 35rpx;
  margin: 0 0 15rpx 0;
  text-align: left;
  font-size: 28rpx;
  color: #666;
}

.related-goods .item .price {
  display: block;
  width: 311.45rpx;
  height: 30rpx;
  text-align: left;
  font-size: 26rpx;
  color: #993333;
}

@import '../../../lib/wxParse/wxParse.wxss'